{
  "plugins": ["vue"],

  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },

  "parser": "vue-eslint-parser",

  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    }
  },

  "extends": ["eslint:recommended", "plugin:vue/recommended"],

  "rules": {
    "indent": ["error", 2],
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "semi": ["error", "never"],
    "no-console": 0
  }
}
